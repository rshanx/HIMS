<Window x:Class="HIMS.Transaction.Reception.Reception"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reception" Height="768" Width="1366" WindowStartupLocation="CenterScreen" WindowState="Maximized" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Closed="Window_Closed">

    <Grid Margin="0,-4,0,4">
        <Menu Grid.Row="0"
