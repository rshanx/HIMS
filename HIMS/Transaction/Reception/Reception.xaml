                <TextBox HorizontalAlignment="Left" Height="23" Margin="85,79,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="62"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="239,79,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="68"/>
                <Button Content="    Confirm&#xA; Appointment" HorizontalAlignment="Left" Margin="16,119,0,0" VerticalAlignment="Top" Width="93" Height="51"/>
                <Button Content="    Cancel&#xA; Appointment" HorizontalAlignment="Left" Margin="115,119,0,0" VerticalAlignment="Top" Width="93" Height="51"/>
                <Button Content="  Telephonic&#xA; Appointment" HorizontalAlignment="Left" Margin="214,119,0,0" VerticalAlignment="Top" Width="93" Height="51"/>
