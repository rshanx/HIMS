                <Label Content="Sex / Age:" HorizontalAlignment="Left" Margin="374,49,0,0" VerticalAlignment="Top"/>
                <Label Content="Dynamic Value" HorizontalAlignment="Left" Margin="440,49,0,0" VerticalAlignment="Top"/>
                <Label Content="Mobile :" HorizontalAlignment="Left" Margin="374,82,0,0" VerticalAlignment="Top"/>
                <Label Content="Dynamic Value" HorizontalAlignment="Left" Margin="440,82,0,0" VerticalAlignment="Top"/>

            </Grid>
        </GroupBox>
        <GroupBox Header="Appointment Sheet" HorizontalAlignment="Left" Margin="27,352,0,0" VerticalAlignment="Top" Height="224" Width="744">
            <Grid>
                <Label Content="Purpose:" HorizontalAlignment="Left" Margin="18,9,0,0" VerticalAlignment="Top"/>
                <Label Content="Date:" HorizontalAlignment="Left" Margin="18,42,0,0" VerticalAlignment="Top"/>
