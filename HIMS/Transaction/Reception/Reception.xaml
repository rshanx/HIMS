                <GroupBox Header="TELEPHONIC APPOINTMENT" HorizontalAlignment="Left" Margin="318,96,0,0" VerticalAlignment="Top" Height="74" Width="404">
                    <Grid>
                        <Label Content="Purpose:" HorizontalAlignment="Left" Margin="9,6,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="68,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258"/>
                        <Button Content="CONFIRM" HorizontalAlignment="Left" Margin="331,8,0,0" VerticalAlignment="Top" Width="61"/>

